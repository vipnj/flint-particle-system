<?xml version="1.0" encoding="utf-8"?>
<mx:Application
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:f="http://flintparticles.org/2009/flint2d"
	layout="absolute" width="400" height="400"
	backgroundColor="#000000">
	
	<mx:Script>
		<![CDATA[
			import org.flintparticles.common.displayObjects.*;
			import flash.geom.Point;
		]]>
	</mx:Script>

<f:DisplayObjectRenderer id="renderer" width="400" height="400">
	<f:emitters>
		<f:Emitter id="emitter" autoStart="true" runAheadTime="5" runAheadFrameRate="30">
			<f:counter>
				<f:Steady rate="300"/>
			</f:counter>
			<f:initializers>
				<f:Position>
					<f:zone>
						<f:LineZone point1="{new Point( -5, -5 )}" point2="{new Point( 505, -5 )}"/>
					</f:zone>
				</f:Position>
				<f:Velocity>
					<f:zone>
						<f:PointZone point="{new Point( -60, 300 )}"/>
					</f:zone>
				</f:Velocity>
				<f:ImageClass imageClass="{Line}" parameters="{[8]}"/>
				<f:AlphaInit minAlpha="0.25" maxAlpha="0.5"/>
			</f:initializers>
			<f:actions>
				<f:Move/>
				<f:DeathZone zoneIsSafe="true">
					<f:zone>
						<f:RectangleZone left="-10" right="510" top="-10" bottom="410"/>
					</f:zone>
				</f:DeathZone>
				<f:RotateToDirection/>
			</f:actions>
		</f:Emitter>
	</f:emitters>
</f:DisplayObjectRenderer>
</mx:Application>
